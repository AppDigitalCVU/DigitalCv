@using AppDigitalCv.Security
@model AppDigitalCv.ViewModels.ParentescoVM
<div>
    <form id="myForm">
        <div class="bs-container">
            <div class="row">
                <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                    <img alt="user Pic" src="~/Imagenes/escudo_uttt.jpg" id="profile-image1" class="product-img img-responsive" width="100" height="70" />
                </div>
                <div class="col-md-7 col-xs-11 col-sm-5 col-lg-7">

                    @Html.HiddenFor(model => model.IdPersonal)
                    @Html.HiddenFor(model => model.IdFamiliar)
                    <table class="table jtable">
                        <tbody>
                            <tr>
                                <td>Nombre:</td>
                                <td>
                                    @Html.TextBoxFor(model => model.StrNombre, new { @class = "form-control input-sm", @placeholder = "Nombre", size = "30", title = "Nombre del Familiar" })
                                </td>
                            </tr>
                            <tr>
                                <td>Ocupación:</td>
                                <td>
                                    @Html.TextBoxFor(model => model.StrOcupacion, new { @class = "form-control input-sm", @placeholder = "Ocupación", size = "30", title = "Ocupación" })
                                </td>
                            </tr>
                            <tr>
                                <td>Domicilio:</td>
                                <td>
                                   @Html.TextBoxFor(model => model.StrDomicilio, new { @class = "form-control input-sm", @placeholder = "Domicilio", size = "30", title = "Domicilio" })
                                </td>
                            </tr>
                            <tr>
                                <td>Edad:</td>
                                <td>
                                  @Html.TextBoxFor(model => model.IntEdad, new { @class = "form-control input-sm", @placeholder = "Edad", size = "30", title = "Edad" })
                                </td>
                            </tr>
                            <tr>
                                <td>Fecha Nacimiento:</td>
                                <td>
                                    @Html.TextBoxFor(model => model.DteFechaNacimiento, new { @class = "form-control input-sm", type = "date", title = "Fecha de Nacimiento" })
                                </td>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9"></div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    <a href="#" id="btnSubmit" class="btn btn-sm btn-success"><span><i class="fa fa-edit"></i> Actualizar</span></a>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function () {

            //serialización del formaulario para la edicion de los datos
            var myformdata = $("#myForm").serialize();
            $.ajax({
                type: "POST",
                url: "/DatosFamiliares/x",
                data: myformdata,
                success: function () {
                    $("#myModal1").modal("hide");
                    window.location.href = "/DatosFamiliares/y";
                }
            })
        });
    });
</script>