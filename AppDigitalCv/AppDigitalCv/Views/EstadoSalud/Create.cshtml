@using AppDigitalCv.Security
@model  AppDigitalCv.ViewModels.EstadoSaludVM
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="bs-container content" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Estado de Salud
                <small>(Agregar)</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#">Agregar</a></li>
                <li class="active">Estado de Salud</li>
            </ol>
        </section>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success">
                                <i class="text-success fa fa-heartbeat"></i>
                                @SessionPersister.AccountSession.Email
                            </label>
                        </h5>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-inline">
                            <div class="form-group">
                                Padece Alguna (s) Enfermedad Crónica?
                                <input type="radio" id="rdbSi" name="si" value="SI" class="custom-control-input"><label for="si">SI</label>
                                <input type="radio" id="rdbNo" name="si" value="NO" class="custom-control-input"><label for="no">NO</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="~/Content/toastr.min.css" rel="stylesheet" />
@section scripts{
    @*<script src="~/Content/js/plugins/jquery/jquery.min.js"></script>*@
    <script src="~/Scripts/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            debugger
            $('input[type=radio][name=rdbSi]').change(function ()
            {
                if ($('#rdbSi').is(":checked"))
                {
                    toastr.success("Cambio el Radio");
                }
            });
            
        });
    </script>
}