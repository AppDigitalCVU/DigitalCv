@model AppDigitalCv.ViewModels.ParentescoVM
@using AppDigitalCv.Security

<div>
    <form id="myForm">

        <div class="form-inline">
            <div class="form-group">
               ¿Deseas <strong>Eliminar</strong> este registro realmente?
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.IdFamiliar, new { @class = "form-control input-sm", id = "IdFamiliar" })
                @Html.HiddenFor(m => m.IdParentesco)
                @Html.HiddenFor(m => m.IdPersonal)
                @Html.HiddenFor(m => m.StrNombre)
                @Html.TextBoxFor(m => m.StrNombre, new { @class = "form-control input-sm", @placeholder = "Nombre del Familiar" })

                <a href="#" id="btnSubmit">
                    <i class="btn btn-sm btn-google glyphicon glyphicon-trash"></i>
                </a>
            </div>
            <div class="form-group">
                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Imagenes/loading-blue.gif" width="150" />
                </div>
            </div>
        </div>


    </form>

</div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            $("#loaderDiv").show();

            var myformdata = $("#myForm").serialize();

            $.ajax({

                type: "POST",
                url: "/Hijos/EliminarFamiliar",
                data: myformdata,
                success: function () {
                    $("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/Hijos/Create";

                }

            })
        })

    })


</script>