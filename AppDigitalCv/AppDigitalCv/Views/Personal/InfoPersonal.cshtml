@model AppDigitalCv.ViewModels.PersonalVM

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="~/Imagenes/anonimo_base.gif" alt="User profile foto">

                    <h3 class="profile-username text-center">@ViewBag.NombreCompleto </h3>
                    <p class="text-muted text-center">Universidad Tecnológica de Tula-Tepeji.</p>

                    <ul class="list-group list-group-unbordered">
                        @Html.HiddenFor(model => model.idPersonal)
                        <li class="list-group-item">
                            <b>Nombre:</b> <a class="pull-right">
                                @Html.DisplayFor(model => model.Nombre, new { @class = "text-muted" })
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>Apellido Paterno:</b> <a class="pull-right">
                                @Html.DisplayFor(model => model.ApellidoPaterno, new { @class = "text-muted" })
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>Apellido Materno:</b> <a class="pull-right">
                                @Html.DisplayFor(model => model.ApellidoMaterno, new { @class = "text-muted" })
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>Curp:</b> <a class="pull-right">
                                @Html.DisplayFor(model => model.Curp, new { @class = "text-muted" })
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>Rfc:</b> <a class="pull-right">
                                @Html.DisplayFor(model => model.RFC, new { @class = "text-muted" })
                            </a>
                        </li>
                        <li class="list-group-item">
                            <b>HomoClave:</b> <a class="pull-right">@Html.DisplayFor(model => model.HomoClave, new { @class = "text-muted" })</a>
                        </li>
                    </ul>
                    <a href="#" class="btn btn-primary btn-block" onclick="EditPersonal(@Model.idPersonal)"><b>Editar</b></a>

                </div>
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <!-- Box Comment -->
            <div class="box box-widget">
                <div class="box-header with-border">
                    <div class="user-block">
                        <img class="img-circle" src="~/Imagenes/anonimo_perfil.jpg" alt="User Image">
                        <span class="username"><a href="#">@ViewBag.NombreCompleto</a></span>
                        <span class="description">Shared today: @ViewBag.FechaServidor</span>
                    </div>
                    <!-- /.user-block -->
                    <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="" data-original-title="Mark as read">
                            <i class="fa fa-circle-o"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="">
                    <!-- post text -->
                    <p class="text-justify">
                        @Html.DisplayFor(model => model.strLogros, new { @class = "text-muted text-justify" })

                    </p>

                    <!-- Attachment -->
                    <div class="attachment-block clearfix">
                        <img class="attachment-img" src="~/Imagenes/escudo_uttt.jpg" alt="Attachment Image">

                        <div class="attachment-pushed">
                            <h4 class="attachment-heading"><a href="http://www.uttt.edu.mx/">La Universidad Tecnológica de Tula-Tepeji</a></h4>

                            <div class="attachment-text text-justify">

                                La Universidad Tecnologica de Tula-Tepeji,te da la bienvenida al sistema de curriculum digital, la cual es una herramienta
                                digital encargada de unificar y estandarizar en formato electronico tu cv,comunicandote directamente con los reclutadores de esta casa de estudios.
                                ¡Sin intermediarios, sin esperas!<span class="fa fa-commenting-o"></span>
                                <a href="#">más</a>
                            </div>
                            <!-- /.attachment-text -->
                        </div>
                        <!-- /.attachment-pushed -->
                    </div>
                    <!-- /.attachment-block -->
                    <!-- Social sharing buttons -->
                    <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
                    <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                    <span class="pull-right text-muted">45 likes - 2 comments</span>
                </div>
                <!-- /.box-body -->
                <div class="box-footer box-comments" style="">
                    <div class="box-comment">
                        <!-- User image -->
                        <img class="img-circle img-sm" src="~/Imagenes/pdf_descargar.jpg" alt="User Image">

                        <div class="comment-text">
                            <span class="username">
                                Maria Gonzales
                                <span class="text-muted pull-right">8:03 PM Today</span>
                            </span><!-- /.username -->
                            It is a long established fact that a reader will be distracted
                            by the readable content of a page when looking at its layout.
                        </div>
                        <!-- /.comment-text -->
                        <button type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i>Eliminar</button>
                        <button type="button" class="btn btn-success btn-xs"><i class="fa  fa-eye"></i>Visualizar</button>
                    </div>
                    <!-- /.box-comment -->
                    <div class="box-comment">
                        <!-- User image -->
                        <img class="img-circle img-sm" src="~/Imagenes/pdf_descargar.jpg" alt="User Image">

                        <div class="comment-text">
                            <span class="username">
                                Nora Havisham
                                <span class="text-muted pull-right">8:03 PM Today</span>
                            </span><!-- /.username -->
                            The point of using Lorem Ipsum is that it has a more-or-less
                            normal distribution of letters, as opposed to using
                            'Content here, content here', making it look like readable English.
                        </div>
                        <!-- /.comment-text -->
                    </div>
                    <!-- /.box-comment -->
                </div>
                <!-- /.box-footer -->
                <div class="box-footer" style="">
                    <form action="#" method="post">
                        <img class="img-responsive img-circle img-sm" src="../dist/img/user4-128x128.jpg" alt="Alt Text">
                        <!-- .img-push is used to add margin to elements next to floating images -->
                        <div class="img-push">
                            <input type="text" class="form-control input-sm" placeholder="Press enter to post comment">
                        </div>
                    </form>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table id="myDataTablePaciente" class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Fecha de Cita</th>
                        <th>Total</th>
                        <th>Identificador</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
    
    <!--empezamos el model como prupuesta-->
    <!-- /.modal -->
</section>
<div class="modal modal-default fade" id="modal-default" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3C8DBC;color:white;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Modificar Datos Personales</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-xs-4  col-sm-4 col-md-4 col-lg-4">
                            <form id="myform">
                                @Html.HiddenFor(m => m.idPersonal)
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label for="etNombre">Nombre:</label>
                                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
                                    </div>
                                    <div class="form-group">
                                        <label for="etNombre">Apellido Paterno:</label>
                                        @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control", @placeholder = "Apellido Paterno" })
                                    </div>
                                    <div class="form-group">
                                        <label for="etNombre">Apellido Materno:</label>
                                        @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control", @placeholder = "Apellido Materno" })
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <a href="#" id="btnSubmit" class="btn btn-success">
                    @if (Model.idPersonal > 0)
                    {<span>Actualizar</span>}
                    else
                    {<span>Guardar</span>}
                </a>
                @*<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Actualizar</button>*@
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
